.y_index_bg,.y_index_bg:before{ background:none no-repeat 0 0 #f2f2f2 !important; }
.index_header{ padding: 15px 30px; background-color: #1b90c5; color: #d0f0ff}
.index_header .logo{ background: url(../img/index_logo.png) no-repeat; height:24px; width: 263px; display: inline-block; }
.header_right{ line-height: 24px }
.header_right span{ padding-right: 10px; border-right: 1px solid #42a8d7; margin-right: 10px; color: #fff}
.exit{ color: #d0f0ff; background: url(../img/exit.png) no-repeat 0 50%; padding: 5px 0 5px 25px}
.exit:hover{ color: #fff;background: url(../img/exit_hover.png) no-repeat; }

.index_content{ padding: 20px 30px; clear: both;}
.index_search .sch_input_search{ border-color: #dcdcdc; width:335px ; height: 32px; line-height: 32px; font-size: 14px; background: url(../img/search.png) no-repeat 10px 50% #fff; padding-left: 35px; border-right: none}
.index_search .sch_input_btn{ width:70px ; height: 32px; line-height: 32px; background-color: #cfa562; color: #fff; border:none; font-size: 14px}
.index_search .sch_input_btn:hover{ background-color: #cb9744 }

.write_apply{ background: url(../img/apply_bg.png) repeat; padding: 50px 0; text-shadow: 1px 1px 1px #fff; color: #333; }
.write_apply_controlWidth{ width: 1100px; margin:0 auto; }
.write_title{ font-size: 16px; font-weight: bold;  background: url(../img/write.png) no-repeat 50% 60px; display: inline-block; width: 260px; height: 195px; line-height: 245px; text-align: center; border-right: 1px solid #d8d8d8}
.write_content{ font-size: 15px; height: 195px; border-left: 1px solid #f2f2f2; padding-left: 80px }
.write_content li{ height: 50px;line-height: 50px; }
.apply_name{ padding-right: 5px; width: 115px; display: inline-block; text-align: right;}
.write_content .overtime_reason{ width: 535px; height: 32px; font-size: 14px; line-height: 32px; border:1px solid #d2d2d2; padding-left: 10px; margin-top: 9px}
.write_content .input-group{ width: 195px; margin: 8px 30px 0 0}
.submit_btn{ padding: 0 !important; margin-left: 116px; border:none !important; background-color:#1b90c5 !important; color: #fff !important; font-size: 14px; text-align: center; width: 196px; height: 32px; line-height: 32px}
.submit_btn:hover{ background-color: #139fde !important;  }
.index_list_title{ padding: 15px 15px 15px 25px; }
.index_list_title h2{ font-size: 15px; font-weight: bold !important;  }
.my_overtime_time{ font-size: 14px !important; font-weight: normal !important; }
.my_overtime_time strong{ color: #fa9a00 }
.approval_feedback{ color: #c54f1b }

.index_list_title h2,.filter_bar{ color: #333; line-height: 30px; height: 30px; }
.filter_bar{ padding: 30px 50px 0 55px;  font-size: 14px}
.filter_operation select{ padding: 5px 8px 5px 5px; margin: 0 5px  }

.index_list{ background-color: #fff; border:1px solid #e5e5e5; border-bottom: none; color: #4e4e4e; font-size: 14px; }
.index_list thead th{text-align:center; background-color: #ececec; height: 50px; line-height: 50px; color: #333 !important;font-size: 14px !important; font-weight: normal; }
.index_list td{ text-align:center;  height: 51px; line-height: 51px; border-bottom: 1px solid #ececec;font-size: 13px; }
.index_list tbody tr:hover{ background-color: #f9f9f9 }
.btn_feedback{ border-radius: 2px; background-color: rgb(57, 178, 233);  width: 96px;  height: 30px; line-height: 30px; color: #fff; text-align: center; display: block; margin: auto; }
.btn_feedback:hover{ background-color: #1b90c5;color: #fff;}
.untreated{ color: #ff9d00 }
.processed{ color: #00a552 }
.forbidden,.forbidden:focus,.forbidden:hover{ background-color: #ccc; color: #fff; cursor: auto;}

/*翻页*/
.DTTTFooter_left{ padding-left: 10px }
.DTTTFooter_left,.DTTTFooter_right{ float: left; width: 50%; margin-top: 15px}
.DTTTFooter_right .pagination{ float: right; }
.dataTables_info{ margin-top: 5px; }
.DTTTFooter_left .dataTables_length{ margin: 0 5px }
div.dataTables_length select{ width: 63px; padding-left: 5px}

/*弹出层*/
.bg_cover{ filter:alpha(opacity=20); -moz-opacity:0.20; opacity:0.20; position: fixed; left: 0; top: 0; width: 100%; height: 100%; background-color: #000; z-index: 1}
.pop_content{ font-size: 16px; color: #333; position: fixed; width: 466px; border-radius: 4px; background-color: #fff; z-index: 2; left: 50%; top: 50%; margin-left: -233px; height: 218px; margin-top: -150px }
.pop_content .title{ background-color: #eee;  border-radius: 4px 4px 0 0; padding: 20px 25px 18px 30px}
.pop_content .title h3{ color: #000; font-weight: 500 !important; font-family:"Microsoft YaHei"}
.pop_content .title .pop_close{ background: url(../img/close.png) no-repeat; width: 17px; height: 16px; display: inline-block; }
.pop_content .title .pop_close:hover{ background: url(../img/close_hover.png) no-repeat; }
.pop_contents{ padding: 35px 0 35px 30px; border-bottom: 1px solid #eee }
.pop_contents span{ float: left;  margin-top: 8px;}
.pop_contents span strong{ color: #ff9d00 }
.pop_contents input{ float: left; border:1px solid #dcdcdc; width: 270px; height: 35px; line-height: 35px; padding-left: 10px; font-size: 16px; margin: 0 5px; color: #333 }
.pop_contents input:focus{ border-color: #ccc; box-shadow: 1px 1px 1px 1px #eee inset }
.index_btn_submit{ width: 160px;border-radius: 2px; margin: 10px auto 0 154px; height: 34px; font-size: 14px;  text-align: center; line-height: 34px; color: #fff; background-color: #39b2e9; border:none; }
.index_btn_submit:hover{ background-color: #1b90c5;}

/*for ie*/
.ie7 .DTTTFooter_right .pagination{ margin-right: 12px }
.ie7 .index_search .sch_input_btn{ height: 34px }
.ie7 .index_search{ height: 32px }
.ie7 .index_header{ height: 26px }
.ie7 .pop_content .title{ height: 20px }
.ie7 .pop_contents{ height: 35px }
.ie7 .index_btn_submit{ margin-left: 387px }